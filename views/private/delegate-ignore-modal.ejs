<div class="js-modal-container modal-container">
  <div class="modal fade" id="js-ignore-modal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">忽略案件</h4>
        </div>
        <div class="modal-body">
          确定要忽略编号<span class="js-m-id text-primary"></span>的案件吗？
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
          <button type="button" class="btn btn-primary js-delegate">确认</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function(){
    var schema=['id']
    var bind=new BindingModal()
    $('.main-container').on('click','.js-show-ignore-modal',function(){
      bind.getPosition($(this))

      $('#js-ignore-modal').modal('show')
    })

    $('#js-ignore-modal').on('show.bs.modal',function(){
      bind.bindingInfo(schema)
    })
  })
</script>
